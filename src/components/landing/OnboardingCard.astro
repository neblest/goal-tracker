---
interface Props {
  icon: string;
  title: string;
  description: string;
  step: number;
}

const { icon, title, description, step } = Astro.props;

// SVG icons inline for static rendering
const icons: Record<string, string> = {
  target: `<svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><circle cx="12" cy="12" r="6"/><circle cx="12" cy="12" r="2"/></svg>`,
  trendingUp: `<svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="22 7 13.5 15.5 8.5 10.5 2 17"/><polyline points="16 7 22 7 22 13"/></svg>`,
  sparkles: `<svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/><path d="M5 3v4"/><path d="M19 17v4"/><path d="M3 5h4"/><path d="M17 19h4"/></svg>`,
};
---

<article
  class="bg-white border border-[#E5DDD5] rounded-xl shadow-sm p-5 hover:shadow-md hover:border-[#D4A574] transition-all"
>
  <div class="flex flex-col items-center text-center space-y-3">
    <!-- Step number badge -->
    <div
      class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-[#D4A574]/10 border border-[#D4A574]/30"
    >
      <span class="text-sm font-semibold text-[#D4A574]">{step}</span>
    </div>

    <!-- Icon -->
    <div class="text-[#D4A574]" set:html={icons[icon] || icons.target} />

    <!-- Title -->
    <h3 class="text-lg font-semibold text-[#4A3F35]">{title}</h3>

    <!-- Description -->
    <p class="text-sm text-[#8B7E74] leading-relaxed">{description}</p>
  </div>
</article>
