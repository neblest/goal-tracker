---
interface Props {
  loginText?: string;
  registerText?: string;
}

const { loginText = "Log in", registerText = "Sign up" } = Astro.props;
---

<div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
  <!-- Login link (outline variant) -->
  <a
    href="/login"
    class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-xl text-sm font-medium transition-all outline-none focus-visible:ring-2 focus-visible:ring-[#D4A574]/30 h-10 px-6 border border-[#E5DDD5] bg-white shadow-sm hover:bg-[#D4A574]/10 hover:border-[#D4A574] text-[#4A3F35] active:scale-[0.98] min-w-[140px]"
  >
    {loginText}
  </a>

  <!-- Register link (default variant) -->
  <a
    href="/register"
    class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-xl text-sm font-medium transition-all outline-none focus-visible:ring-2 focus-visible:ring-[#D4A574]/30 h-10 px-6 bg-[#D4A574] text-white shadow-sm hover:bg-[#C9965E] active:scale-[0.98] min-w-[140px]"
  >
    {registerText}
  </a>
</div>
