---
import OnboardingCard from "./OnboardingCard.astro";

const steps = [
  {
    step: 1,
    icon: "target",
    title: "Set a goal",
    description:
      "Define your goals in a simple and measurable way. Set a target value and deadline that will motivate you to take action.",
  },
  {
    step: 2,
    icon: "trendingUp",
    title: "Track progress",
    description:
      "Regularly record your achievements. See in real-time how you're approaching your goal and celebrate every step forward.",
  },
  {
    step: 3,
    icon: "sparkles",
    title: "Learn with AI",
    description:
      "After completing your goal, receive intelligent summaries and recommendations. Learn what worked and how to achieve more in the future.",
  },
];
---

<section class="py-8 px-4">
  <div class="max-w-6xl mx-auto">
    <!-- Section header -->
    <div class="text-center mb-8">
      <h2 class="text-2xl sm:text-3xl font-bold text-[#4A3F35] mb-3">How it works?</h2>
      <p class="text-base sm:text-lg text-[#8B7E74] max-w-2xl mx-auto">
        Three simple steps to achieving goals and personal growth
      </p>
    </div>

    <!-- Steps grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 lg:gap-6">
      {
        steps.map((stepData) => (
          <OnboardingCard
            step={stepData.step}
            icon={stepData.icon}
            title={stepData.title}
            description={stepData.description}
          />
        ))
      }
    </div>
  </div>
</section>
